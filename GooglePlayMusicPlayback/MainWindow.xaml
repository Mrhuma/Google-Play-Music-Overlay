<Window x:Class="GooglePlayMusicOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Google Play Music Playback" Height="120" Width="250" Background="#FF222326" WindowStyle="ToolWindow" PreviewLostKeyboardFocus="Window_PreviewLostKeyboardFocus" Deactivated="Window_Deactivated">
    <Grid>
        <TextBox x:Name="songNameText" HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="200" VerticalScrollBarVisibility="Disabled" BorderBrush="{x:Null}" BorderThickness="0,1,0,0" FontSize="16" FontFamily="Courier New" Background="#FF222326" Foreground="White" IsReadOnly="True" FontWeight="Bold" Margin="20,10,0,0"/>
        <TextBox x:Name="artistAlbumNameText" HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="200" BorderBrush="{x:Null}" BorderThickness="0,0,0,1" FontSize="16" FontFamily="Courier New" VerticalScrollBarVisibility="Disabled" Background="#FF222326" Foreground="White" IsReadOnly="True" FontWeight="Bold" Margin="20,26,0,0"/>
        <Button x:Name="button" Content="Settings" HorizontalAlignment="Left" Margin="83,60,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Window>
